                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="4dp">

                    <!-- Horizontal layout: Image on the left, text info on the right -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- ImageView: Lecturer photo, left side, rounded -->
                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="12dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_20"
                            android:background="@drawable/rounded_left"
                            android:clipToOutline="true"/>

                        <!-- Vertical layout: Contains lecturer's name and education info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <!-- TextView: Lecturer name (bold) -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Musawarman, S.Kom, M.M.S.I."
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#000000"/>

                            <!-- TextView: S1 education -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="[S1 – Institut Pertanian Bogor]"
                                android:textSize="14sp"
                                android:textColor="#555555"
                                android:paddingTop="10dp"/>

                            <!-- TextView: S2 education -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="[S2 – Universitas Gunadarma, Jakarta]"
                                android:textSize="14sp"
                                android:textColor="#555555" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

